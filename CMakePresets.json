{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CHARMANDER_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "rel",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ci",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON"
      }
    },
    {
      "name": "cov",
      "inherits":"base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_CHARMANDER_COVERAGE": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "rel",
      "configurePreset": "rel"
    },
    {
      "name": "ci",
      "configurePreset": "ci"
    },
    {
      "name": "cov",
      "configurePreset": "cov"
    }
  ],
  "testPresets": [
    {
      "name": "rel",
      "configurePreset": "rel",
      "output": {
        "outputOnFailure": true,
        "shortProgress": true
      }
    },
    {
      "name": "ci",
      "configurePreset": "ci",
      "output": {
        "outputOnFailure": true,
        "shortProgress": true
      },
      "execution": {
        "noTestsAction": "error",
        "parallelLevel":0
      }
    },
    {
      "name": "cov-gcc",
      "configurePreset": "cov",
      "execution": {
        "parallelLevel":0
      }
    },
    {
      "name": "cov-clang",
      "configurePreset": "cov",
      "execution": {
        "parallelLevel":0
      },
      "environment": {
        "LLVM_PROFILE_FILE": "coverage-%p.profraw"
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "rel",
      "steps": [
        {"type": "configure", "name": "rel"},
        {"type": "build", "name": "rel"}
      ]
    },
    {
      "name": "ci",
      "steps": [
        {"type": "configure", "name": "ci"},
        {"type": "build", "name": "ci"},
        {"type": "test", "name": "ci"}
      ]
    },
    {
      "name": "cov-gcc",
      "steps": [
        { "type": "configure", "name": "cov" },
        { "type": "build",     "name": "cov" },
        { "type": "test",      "name": "cov-gcc" }
      ]
    },
    {
      "name": "cov-clang",
      "steps": [
        { "type": "configure", "name": "cov" },
        { "type": "build",     "name": "cov" },
        { "type": "test",      "name": "cov-clang" }
      ]
    }
  ]
}